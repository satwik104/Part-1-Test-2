/* input - Input String
*  output - Save the result in the output array (passed as argument). You donÃ¢t have to 
*  print or return the result
*/
#include <cstring>
#include<bits/stdc++.h> 
void minLengthWord(char input[], char output[]){
		
	 int n=strlen(input);
    int mini=INT_MAX;
    int start=-1;
    int cnt=0;
    for(int i=0;i<=n;i++)
    {
        if(input[i]!=' ' && i!=n)
        {
            cnt++;
        }
         else if(cnt<mini||(i==n &&cnt<mini))
         {
            mini=cnt;
            start=i-mini;
            cnt=0;
        }
        else{
            cnt=0;
        }
     }
    for(int i=0;i<mini;i++)
    {
         output[i]=input[i+start];
    }

}


